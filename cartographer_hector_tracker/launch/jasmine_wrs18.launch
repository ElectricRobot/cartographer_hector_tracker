<launch>
  <param name="/use_sim_time" value="true" />
  <arg name="urdf_filenames" default="$(find hector_tracked_vehicles_description)/urdf/jasmine_2018_ugv.urdf"/>

  
  <include file="$(find hector_argo_tracker_postproc_launch)/launch/play_with_recreated_tf_from_recorded_data.launch" />
  
  <node name="cartographer" pkg="cartographer_ros"
      type="cartographer_node" args="
          -configuration_directory $(find cartographer_hector_tracker)/configuration_files
          -configuration_basename jasmine_wrs18.lua"
      output="screen" respawn="true">
    <remap from="points2" to="/spin_laser/vlp16"/> 
    <remap from="imu" to="/imu/data"/>
    <remap from="odom" to="/odom_raw"/>
  </node>

  <node name="playbag" pkg="rosbag" type="play"
      args="$(arg bag_filename) -r 1.0 -s 0 --clock /controller/follow_path/status:=/controller/follow_path/status_trash /move_group/status:=/move_group/status_trash /move_base/status:=/move_base/status_trash /move_group/goal:=/move_group/goal_trash /move_base/goal:=/move_base/goal_trash /move_group/cancel:=/move_group/cancel_trash /move_group/feedback:=/move_group/feedback /move_group/result:=/move_group/result_trash /execute_trajectory/goal:=/execute_trajectory/goal_trash /execute_trajectory/result:=/execute_trajectory/result_trash /execute_trajectory/status:=/execute_trajectory/status_trash /tf:=/tf_trash /odom:=/odom_trash" />

</launch>
